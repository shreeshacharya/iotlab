int leds[] = {2, 3, 4, 5, 6}; // LED pins
int delayTime = 1000; // ms delay between steps

void setup() {
  for (int i = 0; i < 5; i++) {
    pinMode(leds[i], OUTPUT);
  }
}

void loop() {
  for (int count = 5; count >= 0; count--) { 
    allOff();
    for (int i = 0; i < count; i++) { 
      digitalWrite(leds[i], HIGH);
    }
    delay(delayTime);
  }
}

void allOff() {
  for (int i = 0; i < 5; i++) {
    digitalWrite(leds[i], LOW);
  }
}
